 <% flash.each do |key, value| %>
 <%= content_tag :div, value, class: key %>
 <%end%>

<h2>User info</h2>

 <%= attachment_image_tag user, :profile_image, :fill, 63, 63, format: 'jpeg' %>

  <table>
    <tbody>
      <tr>
          <th>name</th>
          <th><%= user.name %></th>
      </tr>
      <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

<%= link_to edit_user_path(user.id) do %>
 <i class="fas fa-user-cog"></i>
<%end%>

<h2>New book</h2>

<%= form_with model:book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>

<%end%>