<h2>User info</h2>

  <table>
    <tbody>
      <tr>
          <th>name</th>
          <th><%= @user.name %></th>
      </tr>
      <tr>
          <th>introduction</th>
          <th><%= @user.introduction%></th>
      </tr>
    </tbody>
  </table>
  
 <i class="fas fa-user-cog"><%= button_to new_user_session_path %>
</i>

<h2>New book</h2>

<%= form_with model:book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>

<%end%>