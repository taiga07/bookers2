<h2>User info</h2>

<%= form_with model: @user, local:true do |f| %>

<label for>Name</label>
<%= f.text_field :name %>

<label for>Image</label>
<%= f.attachment_field :profile_image %>

<label for>Introduction</label>
<%= f.text_area :introduction %>

<%= f.submit 'Update User' %>

<%end%>