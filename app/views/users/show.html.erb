<%= render 'shared/template', book: @book, user: @user %>

<h2>Books</h2>

<table>

  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg' %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <%end%>
  </tbody>

</table>

<%= paginate @books %>