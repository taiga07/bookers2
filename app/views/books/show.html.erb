<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'shared/template', book: @book, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to user_path(@books.user) do %>
              <%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, format: 'jpeg' %>
              <%=@books.user.name%>
              <%end%>
            </td>
            <td><%= link_to @books.title, book_path(@books.id) %></td>
            <td><%= @books.body %></td>

            <% if @books.user == current_user %>
            <td><%= button_to "Edit", edit_book_path, method: :get %></td>
            <td><%= button_to "Destroy", book_path(@books), method: :delete %></td>
            <% end %>

          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>