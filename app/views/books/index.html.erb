<%= render 'shared/template', book: @book, user: @user %>


<h2>Books</h2>

<table>

  <thed>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thed>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg' %>
          <%end%>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <%end%>
  </tbody>

</table>